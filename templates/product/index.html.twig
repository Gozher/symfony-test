{% extends 'base.html.twig' %}

{% block title %}Porductos!{% endblock %}

{% block body %}

<h3>Listado de productos</h3>

<div class="my-4">
    <a href="{{ path('create_product') }}" class="btn btn-primary">Nuevo producto</a>
</div>

<div class="my-4">

    <table class="table">
    <thead class="bg-dark text-white">
        <tr>
        <th scope="col">#</th>
        <th scope="col">Codigo</th>
        <th scope="col">Categoria</th>
        <th scope="col">Producto</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Marca</th>
        <th scope="col">Precio</th>        
        <th scope="col">Fecha creacion</th>
        <th scope="col">Fecha Actualizacion</th>
        <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for item in products %}
        <tr>
        <th scope="row">{{item.id}}</th>
        <td>{{item.code}}</td>
        <td>{{item.getCategory().getName()}}</td>
        <td>{{item.name}}</td>
        <td>{{item.description}}</td>
        <td>{{item.brand}}</td>
        <td>{{item.price}}</td>        
        <td>{{item.createdAt|date}}</td>
        <td>{{item.updatedAt|date}}</td>
        <td>
        <a href="{{ path('update_product', {id: item.id}) }}" class="btn btn-warning"> Editar</a>
        <a href="{{ path('delete_product', {id: item.id}) }}" class="btn btn-danger">Borrar</a>
        </td>
        </tr>    
    {% endfor %}

    </tbody>
    </table>

</div>


</div>
{% endblock %}
